<div class = "forumDiv">
         <h2>Edit your topic</h2>
        <form class = "forumDiv" action="/forum/edit/{{foundTopic._id}}" method="POST">
        <label> Topic Name
        <textarea id = "topic"  cols="40" rows="5" name="topicName" >{{foundTopic.topicName}}</textarea>
        </label>
    
        <label> Content
        <textarea id = "content"  cols="40" rows="5" name="content">{{foundTopic.content}}</textarea>
        </label>

        <img class = "topicImg" src="/images/{{foundTopic.photo}}" alt="picture">
        <label for="photo">Topic photo</label>
        <input type="file" name="photo" id="photo" value="/images/topic.jpg">
        <button type="submit">EDIT Topic</button>
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
    </div>