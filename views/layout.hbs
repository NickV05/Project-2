<head>
    <title>Umbrella Corporation</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="" href="/middleware/route-guard.js">
  </head>

<body>
    <nav>
      <ul class = "navBar">
        <li id="to-left">
          <form id="logout-form" action="/" method="GET">
          <button>Home</button>
          </form>
        </li>
          {{#unless user}}
        <li id="to-right">
          <form id="logout-form" action="/auth/signup" method="GET">
          <button>Signup</button>
          </form>
          <form id="logout-form" action="/auth/login" method="GET">
          <button>Login</button>
          </form>
        </li>
          {{/unless}}
        {{#if user}}
        <h2>Welcome {{ user.fullName }}!</h2>
        <li id="to-right"></li>
          <form id="logout-form" action="/auth/userProfile/{{user.username}}" method="GET">
          <button>Profile</button>
          </form>
          <form id="logout-form" action="/auth/forum" method="GET">
          <button>Forum</button>
          </form>
          <form id="logout-form" action="/auth/logout" method="POST">
          <button>Logout</button>
          </form>
        </li>
        {{/if}}
      </ul>
    </nav>
    {{{body}}}
  </body>